<?xml version="1.0" encoding="utf-8"?>
<shape xmlns:android="http://schemas.android.com/apk/res/android"
    android:shape="rectangle">

    <solid android:color="@android:color/white" />

    <corners android:radius="16dp" />

    <elevation android:height="6dp" /> <!-- This is just semantic; elevation is better set in the layout -->

    <padding
        android:left="8dp"
        android:top="8dp"
        android:right="8dp"
        android:bottom="8dp" />

    <stroke
        android:width="1dp"
        android:color="#1A000000" /> <!-- Light transparent border -->
</shape>
